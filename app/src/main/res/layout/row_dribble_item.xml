<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_row_dribble_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroung_white_shadow"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_row_dribble_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:actualImageScaleType="none"
            android:minHeight="120dp"
            fresco:backgroundImage="@android:color/transparent"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:progressBarImage="@drawable/ic_progress"
            fresco:failureImage="@drawable/ic_no_image"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImageScaleType="centerInside"/>

        <TextView
            android:id="@+id/tv_row_dribble_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="18sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_row_dribble_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="4dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:textColor="@android:color/white"/>


    </RelativeLayout>


